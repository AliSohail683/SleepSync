{
  "expo": {
    "name": "SleepSync",
    "slug": "sleepsync",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0A0E27",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.sleepsync.app",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "fetch"
        ],
        "NSMicrophoneUsageDescription": "SleepSync uses the microphone to detect snoring and optimize your sleep environment (optional feature).",
        "NSCameraUsageDescription": "SleepSync uses the camera to detect sleep movements (optional feature).",
        "NSMotionUsageDescription": "SleepSync uses motion data to track sleep stages and movements."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0E27"
      },
      "package": "com.sleepsync.app",
      "versionCode": 1,
      "permissions": [
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "VIBRATE",
        "USE_BIOMETRIC",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow SleepSync to access your microphone for sleep tracking (optional)."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6B4CE6",
          "sounds": [
            "./assets/sounds/gentle-wake.mp3"
          ]
        }
      ],
      "expo-secure-store",
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
